statistics-channels {
    inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};

options {
  directory "/var/named";
  dump-file               "data/cache_dump.db";
  statistics-file         "data/named_stats.txt";
  memstatistics-file      "data/named_mem_stats.txt";

  forward first;
	forwarders {
		172.16.1.3;
		172.16.2.116;
		172.16.3.4;
	};
  recursion yes;
  allow-recursion { 10.0/8; 172.16.0.0/12; 127.0.0.1; };
  allow-query { 10.0/8; 172.16.0.0/12; 127.0.0.1; };
        notify no;
	auth-nxdomain no;
	dnssec-enable no;
  max-ncache-ttl 0;
};
